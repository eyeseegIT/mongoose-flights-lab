<%- include('../partials/html-head') %>
<link rel="stylesheet" href="/stylesheets/flights/show.css" />
<%- include('../partials/nav') %>

<main>
  <h1>Flight Details</h1>
  <section>
    <div>Airline: </div>
    <div><%= flight.airline %></div>
    <div>Airport: </div>
    <div><%= flight.airport %></div>
    <div>Flight No: </div>
    <div><%= flight.flightNo %></div>
    <div>Departs: </div>
    <div><%= flight.departs %></div>
    <div>Tickets: </div>
    <div>
      <% if (flight.tickets.length) { %> 
        <table>
          <thead>
            <tr>
              <th>Seat</th>
              <th>Price</th>
            </tr>
          </thead>
          <tbody>
            <% flight.tickets.forEach(function(ticket) { %> 
              <tr>
                <td><%= ticket.seat %></td>
                <td><%= ticket.price %></td>
                <td>
                  <form action="/flights/<%= flight._id %>/tickets/<%= ticket._id %>?_method=DELETE" method="POST">
                  <button>X</button>
                  </form>
              </tr>
            <% }) %> 
          </tbody>
        </table>
      <% } else { %>
        <h3>No Tickets Yet</h3> 
      <% } %> 
    </div>
    <div>Current Destinations:</div>
      <ul>
      <%- flight.currentDestinations.map(p => `<li>${p.airport}</li>`).join('') %>
      </ul>
  </section>

  <h2>Add New Destination</h2>
  <form id="add-destination-to-current-destinations" action="/flights/<%= flight._id %>/destinations" method="POST">
    <select name="destinationId">
      <%- destinationsNotPresent.map(p => `<option value="${p._id}">${p.airport}</option>`).join('') %>
    </select>
    <button type="submit">Add to Current Destinations</button>
  </form>
  

  <h2>Add New Ticket</h2>
  <form action="/flights/<%= flight._id %>/tickets"  method="POST"> 
    <label>Seat:
      <input name="seat" required pattern="[A-F][1-9]\d?">
    </label><br>
    <label>Price:
      <input name="price" type="number" min=0>
    </label><br>
    <button type="submit">Add Ticket</button>
  </form>

</main>

<%- include('../partials/footer') %>